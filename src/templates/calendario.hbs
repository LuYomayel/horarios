<!DOCTYPE html>
<html>
<head>
  <title>Horario</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    th, td {
      text-align: center;
      padding: 8px;
      border: 1px solid #ccc;
    }

    th {
      background-color: #f2f2f2;
    }
    td {
      width: 100px;
    }
    h1{
      margin: 0;
    }
    h4{
      margin:0;
    }
  </style>
</head>
<body>
  <h1>Curso: {{curso}}</h1>
  <h4>Turno: {{turno}}</h4>
  <table>
  <thead>
    <tr>
      <th>Horarios</th>
      {{#each schedule}}
        <th>{{this.day}}</th>
      {{/each}}
    </tr>
  </thead>
  <tbody>
    {{#eachIndex schedule}}
      <tr>
         <td>{{lookup ../horarios @index}}</td>
        {{#each ../schedule}}
          
          <td>
            {{#with (lookup this.hours @../index)}}
              <p>{{materia}}</p>
              <p>{{profesor}}</p>
              <p>{{tipoProfesor}}</p>
            {{/with}}
          </td>
        {{/each}}
      </tr>
    {{/eachIndex}}
  </tbody>
  </table>
</body>
</html>
